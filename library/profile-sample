# Set bash style
PS1='\n\[\033[1;35m\]\u \[\033[0;37m\]at \[\033[1;33m\]\h \[\033[0;37m\]in \[\033[0;32m\]\w \[\033[0;37m\]on \[\033[0;36m\]$(date +%d/%m/%Y) \[\033[0;37m\]at \[\033[0;36m\]$(date +%H:%M:%S) \n\[\033[0;37m\]$ '

# Set system aliases
alias ls='ls -G'
alias l='ls'
alias ll='l -lh'
alias llh='ll -A'
alias rm='rm -i'
